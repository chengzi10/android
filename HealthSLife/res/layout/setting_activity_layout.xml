<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res/com.healthslife"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" 
    android:id="@+id/setting_activity">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_top_bg">
        <ImageView
            android:id="@+id/backimage_in_settingactivity"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/liebiao"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="设置 "
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#efeff4"
            android:layout_gravity="right"
            />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/speaker"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="210dp"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="语音播报"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        <com.healthslife.system.SlideSwitch
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
        	android:id="@+id/sequence_swit"
        	android:layout_width="60dp"
        	android:layout_height="30dp"
        	slideswitch:isOpen="true"
        	slideswitch:shape="circle"
        	slideswitch:themeColor="#fffc921a" >
    	</com.healthslife.system.SlideSwitch>
    	
    </LinearLayout>
    
    <TextView
        android:id="@+id/to_show"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efeff4"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="30dp"
        />
    <LinearLayout
        android:id="@+id/sequence_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/sequence_imageview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/frequence"
            />
        <TextView
            android:id="@+id/sequence_textview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="播报频率"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="#efeff4"
            />
    <LinearLayout
        android:id="@+id/user_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/checked_user"
            />
        <TextView
            android:id="@+id/user_msg_textview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="个人信息"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
     <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#efeff4"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            />
    <LinearLayout
        android:id="@+id/user_target"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/target"
            />
        <TextView
            android:id="@+id/target_textview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="个人目标"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="#efeff4"
            />
    <LinearLayout
        android:id="@+id/set_music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/music_image"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/music_setting_textview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="音乐设置"
            android:textColor="#000000"
            android:textSize="16dp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="#efeff4"
            />

    <LinearLayout
        android:id="@+id/summary_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/jianjie"
            />
        <TextView
            android:id="@+id/summary_textview"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="简介"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="#efeff4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            />
    
    
    <LinearLayout
        android:id="@+id/abuot_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/about_image"
            />
        <TextView
            android:id="@+id/about_text_view"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="关于"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="#efeff4"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            />
    <LinearLayout
        android:id="@+id/answers_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/questionandransower"
            />
        <TextView
            android:id="@+id/hasnew"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="版本更新"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#efeff4"
        android:orientation="vertical" >
        
    <Button
        android:id="@+id/quit_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="退出登录"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:onClick="quit_btn"
        />
    </LinearLayout>

</LinearLayout>
