<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FCFCFC"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_top_bg">
        <ImageView
            android:id="@+id/backimage_in_about"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="简    介 "
            android:textColor="#ffffff"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/loading_logo_in_about"
        
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="应用名称"
        android:textColor="#292421"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="健康S生活"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="开发"
        android:textColor="#292421"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="健康S生活一组"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="14dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="欧阳春  徐士程  刘海龙  冯雪艳  朱正超"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="美工"
        android:textColor="#292421"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="冯雪艳、孙景春"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="鸣谢"
        android:textColor="#292421"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="百度图片、CSDN、百度地图"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="特别鸣谢"
        android:textColor="#292421"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="12dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="软酷网"
        android:textColor="#fffc921a"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="12dp"
        />
    <Button
        android:id="@+id/ok_button_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="150dp"
        android:background="#fffc921a"
        android:text="确  定"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    

</LinearLayout>
</ScrollView>